@model qms.Models.tblLogoutType
@{
    ViewBag.Title = "Logout Type Edit";
}
<div class="container">
    <div class="row">
        <h4 class="page-head-line">Logout Type > Edit</h4>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.logout_type_id)

            <div class="form-group">
                @*@Html.LabelFor(model => model.Logout_type_name, htmlAttributes: new { @class = "control-label col-md-4" })*@
                <div class="col-md-8">
                    @Html.EditorFor(model => model.logout_type_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Logout Type Name" } })
                    @Html.ValidationMessageFor(model => model.logout_type_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.start_time, htmlAttributes: new { @class = "control-label col-md-4" })*@
                <div class="col-md-8">
                    @Html.CheckBoxFor(model => model.bool_has_free_text, new { htmlAttributes = new { @class = "form-control" } }) Free Text?
                    @Html.ValidationMessageFor(model => model.bool_has_free_text, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.start_time, htmlAttributes: new { @class = "control-label col-md-4" })*@
                <div class="col-md-8">
                    @Html.CheckBoxFor(model => model.bool_is_active, new { htmlAttributes = new { @class = "form-control" } }) Is Active?
                    @Html.ValidationMessageFor(model => model.bool_is_active, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-4">
                    <input type="submit" value="Update" class="btn btn-color" />
                    <button class="btn btn-color">
                        @Html.ActionLink("Back to List", "Index")
                    </button>
                </div>
            </div>
        </div>
        }


    </div>
</div>

