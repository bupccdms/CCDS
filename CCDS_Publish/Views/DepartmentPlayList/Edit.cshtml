@model qms.ViewModels.VMDepartmentPlayList

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@{
    ViewBag.Title = "Display Footer Edit";
}
<div class="container">
    <div class="row">
        <h4 class="page-head-line">Department Playlist > Edit</h4>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.department_playlist_id)
            @Html.HiddenFor(model => model.department_id)
            @Html.HiddenFor(model => model.is_publish)
            @*@Html.HiddenFor(model => model.is_priority)*@

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-4">
                    Department: @Html.TextBoxFor(m => m.department_name, new { @disabled = "disabled", @class = "form-control Next" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.DropDownList("playlist_id", null, "Select One Content", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.playlist_id, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    @Html.CheckBoxFor(model => model.bool_is_priority, new { htmlAttributes = new { @class = "form-control" } }) Is priority?
                    @Html.ValidationMessageFor(model => model.bool_is_priority, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-6">
                    <input type="submit" value="Update" class="btn btn-color" />
                    <button class="btn btn-color">
                        @Html.ActionLink("Back to List", "Index")
                    </button>
                </div>
            </div>
        </div>

        }
    </div>
</div>

