@model IEnumerable<qms.ViewModels.VMGalleryItem>

    <div class="row">
        <div class="row text-center table-bordered table-scroll" style="padding-top:15px; padding-bottom:15px; margin-bottom:15px;">
            <div class="col-md-12">
                @{
                    var x = 0;
                }
                @foreach (var item in Model)
                {
                    if (item.file_type == "IMAGE")
                    {
                        x = x + 1;
                        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                            <img class="img-thumbnail"
                                    src="@((Request.ApplicationPath==@"/"?"":Request.ApplicationPath) +  item.file_full_path)"
                                    alt="@item.file_name">
                            <div class="col-lg-12" style="margin-bottom:10px">
                                <input type="radio" style="cursor:pointer" name="radio-gallery" id="@item.file_name" value="@item.file_name" />
                                <label for="@item.file_name" style="cursor:pointer; padding:10px">@item.file_name</label>
                            </div>
                        </div>
                        if (x == 4)
                        {
                            x = 0;
                            <div class="clearfix"></div>
                        }
                    }
                }
            </div>
            <div class="col-md-12">
                @{
                    var y = 0;
                }
                @foreach (var item in Model)
                {
                    if (item.file_type == "VIDEO")
                    {
                        y = y + 1;
                        <div class="col-lg-3 col-md-4 col-xs-6 thumb" style="width:33%">
                            <video class="img-thumbnail" controls>
                                <source type="video/@item.file_extenstion" src="@((Request.ApplicationPath==@"/"?"":Request.ApplicationPath) +  item.file_full_path)">
                            </video>
                            <div class="col-lg-12" style="margin-bottom:10px">
                                <input type="radio" style="cursor:pointer" name="radio-gallery" id="@item.file_name" value="@item.file_name" />
                                <label for="@item.file_name" style="cursor:pointer; padding:10px">@item.file_name</label>
                            </div>
                        </div>
                        if (y == 3)
                        {
                            y = 0;
                            <div class="clearfix"></div>
                        }
                    }
                }
            </div>

            <div class="col-md-12">
                @{
                    var z = 0;
                    var p = 0;
                    var q = 0;
                    var r = 0;
                    var s = 0;
                }

                @foreach (var item in Model)
                {
                    if (item.file_type == "Docx")
                    {
                        z = z + 1;
                        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                            <img src="~/img/doc.jpg" alt="@item.file_name" style="height:180px;" />
                            <div class="col-lg-12" style="margin-bottom:10px">
                                <input type="radio" style="cursor:pointer" name="radio-gallery" id="@item.file_name" value="@item.file_name" />
                                <label for="@item.file_name" style="cursor:pointer; padding:10px">@item.file_name</label>
                            </div>
                        </div>
                        if (z == 4)
                        {
                            z = 0;
                            <div class="clearfix"></div>
                        }
                    }

                    else if (item.file_type == "PDF")
                    {
                        s = s + 1;
                            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                                <img src="~/img/pdf.png" alt="@item.file_name" style="height:160px;" />
                                <div class="col-lg-12" style="margin-bottom:10px">
                                    <input type="radio" style="cursor:pointer" name="radio-gallery" id="@item.file_name" value="@item.file_name" />
                                    <label for="@item.file_name" style="cursor:pointer; padding:10px">@item.file_name</label>
                                </div>
                            </div>
                        if (s == 4)
                        {
                            s = 0;
                            <div class="clearfix"></div>
                        }
                    }
                    else if (item.file_type == "EXCEL")
                    {
                        p = p + 1;
                            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                                <img src="~/img/excel_img.jpg" alt="@item.file_name" style="height:180px;" />
                                <div class="col-lg-12" style="margin-bottom:10px">
                                    <input type="radio" style="cursor:pointer" name="radio-gallery" id="@item.file_name" value="@item.file_name" />
                                    <label for="@item.file_name" style="cursor:pointer; padding:10px">@item.file_name</label>
                                </div>
                            </div>
                        if (p == 4)
                        {
                            p = 0;
                            <div class="clearfix"></div>
                        }
                    }

                    else if (item.file_type == "POWERPOINT")
                    {
                        q = q + 1;
                            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                                <img src="~/img/powerpoint_img.png" alt="@item.file_name" style="height:180px;" />
                                <div class="col-lg-12" style="margin-bottom:10px">
                                    <input type="radio" style="cursor:pointer" name="radio-gallery" id="@item.file_name" value="@item.file_name" />
                                    <label for="@item.file_name" style="cursor:pointer; padding:10px">@item.file_name</label>
                                </div>
                            </div>
                        if (q == 4)
                        {
                            q = 0;
                            <div class="clearfix"></div>
                        }
                    }

                    else if (item.file_type == "TXT")
                    {
                        r = r + 1;
                            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                                <img src="~/img/Text.png" alt="@item.file_name" style="height:180px;" />
                                <div class="col-lg-12" style="margin-bottom:10px">
                                    <input type="radio" style="cursor:pointer" name="radio-gallery" id="@item.file_name" value="@item.file_name" />
                                    <label for="@item.file_name" style="cursor:pointer; padding:10px">@item.file_name</label>
                                </div>
                            </div>
                        if (r == 4)
                        {
                            r = 0;
                            <div class="clearfix"></div>
                        }
                    }

                }
            </div>

