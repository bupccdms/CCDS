        <a href='@Url.Action("Create", "Gallery")' style="margin-bottom : 10px;">
            <button class="btn btn-color" style="margin-bottom : 10px;">Add New</button>
        </a>
        <div class="row text-center table-bordered table-scroll" style="padding-top:15px; padding-bottom:15px; margin-bottom:15px;">
            <div class="col-md-12">
                @{
                    var x = 0;
                }
                @foreach (var item1 in Model)
                {
                    if (item1.file_type == "IMAGE")
                    {
                        x = x + 1;
                        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                            <img class="img-thumbnail"
                                 src="@((Request.ApplicationPath==@"/"?"":Request.ApplicationPath) +  item1.file_full_path)"
                                 alt="@item1.file_name">
                            <div class="col-lg-12" style="margin-top:10px; margin-bottom:10px">
                                @item1.file_name
                                <button class="btn btn-color left" title="Delete this content parmanently?" onclick="DeleteMedia('@((Request.ApplicationPath==@"/"?"":Request.ApplicationPath) +  item1.file_full_path)')">
                                    <span><i class="fa fa-remove"></i></span>
                                </button>
                            </div>
                        </div>
                        if (x == 4)
                        {
                            x = 0;
                            <div class="clearfix"></div>
                        }
                    }
                }
            </div>
            <div class="col-md-12">
                @{
                    var y = 0;
                }
                @foreach (var item in Model)
                {
                    if (item.file_type == "VIDEO")
                    {
                        y = y + 1;
                        <div class="col-lg-3 col-md-4 col-xs-6 thumb" style="width:33%">
                            <video class="img-thumbnail" controls>
                                <source type="video/@item.file_extenstion" src="@((Request.ApplicationPath == @"/" ? "" : Request.ApplicationPath) + item.file_full_path)">
                            </video>
                            <div class="col-lg-12" style="margin-bottom:10px">
                                @item.file_name
                                <button class="btn btn-color left" title="Delete this content parmanently?" onclick="DeleteMedia('@item.file_full_path')">
                                    <span><i class="fa fa-remove"></i></span>
                                </button>
                            </div>
                        </div>
                        if (y == 3)
                        {
                            y = 0;
                            <div class="clearfix"></div>
                        }
                    }
                }
            </div>

            <div class="col-md-12">
                @{
                    var z = 0;
                    var p = 0;
                    var q = 0;
                    var r = 0;
                    var s = 0;
