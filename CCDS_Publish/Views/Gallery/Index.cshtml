                        }
                    }

                    else if (item.file_type == "PDF")
                    {
                        s = s + 1;
                        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                            <img src="~/img/pdf.png" alt="@item.file_name" style="height:160px;" />
                            <div class="col-lg-12" style="margin-top:10px; margin-bottom:10px">
                                @item.file_name

                                <button class="btn btn-color left" title="Delete this content parmanently?" onclick="DeleteMedia('@((Request.ApplicationPath==@"/"?"":Request.ApplicationPath) +  item.file_full_path)')">
                                    <span><i class="fa fa-remove"></i></span>
