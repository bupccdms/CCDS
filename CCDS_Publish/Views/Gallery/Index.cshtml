                            </div>
                        </div>
                        if (s == 4)
                        {
                            s = 0;
                            <div class="clearfix"></div>
                        }
                    }
                    else if (item.file_type == "EXCEL")
                    {
                        p = p + 1;
                        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                            <img src="~/img/excel_img.jpg" alt="@item.file_name" style="height:180px;" />
