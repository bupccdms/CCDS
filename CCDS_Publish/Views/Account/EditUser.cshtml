@using qms.Utility;
@model qms.Models.EditUserViewModel
@{
    ViewBag.Title = "User Information Edit";
}

<div class="container">
    <div class="row">
        <h4 class="page-head-line">Security > User Information Edit</h4>
        <div class="col-md-7">
            @using (Html.BeginForm("EditUser", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })


                <div class="form-group">
                    <div class="col-md-5">
                        @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                    </div>
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-5">
                        @Html.LabelFor(m => m.Hometown, new { @class = "control-label" })
                    </div>
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Hometown, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-5">
                        @Html.LabelFor(m => m.Mobile, new { @class = "control-label" })
                    </div>
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-5">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    </div>
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-md-8">
                        <input type="submit" class="btn btn-color" value="Update" />
                        <a href='@Url.Action("Index", "DepartmentUsers")' class="btn btn-color">
                            Back to List
                        </a>
                    </div>
                </div>
            }
        </div>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script>

    $(document).ready(function () {

        ChangeInternalExternalView($('#is_active_directory_user').val());

        $('#is_active_directory_user').on('change', function () {
            ChangeInternalExternalView(this.value);
        });
    });

    function ChangeInternalExternalView(is_active_directory_user) {
        if (is_active_directory_user > 0)
            $("#passwordDiv").hide(150);
        else
            $("#passwordDiv").show(150);
    }
</script>
