@model qms.ViewModels.VMDevicePlayList


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@{
    ViewBag.Title = "Device Playlist Delete";
}

<div class="container">
    <div class="row">
        <h4 class="page-head-line">Device Playlist > Delete</h4>
        <h3>Are you sure you want to delete this?</h3>
        <div>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Active?")
                </dt>

                <dd>
                    @if (Model.is_global > 0)
                    {
                        @Html.DisplayName("Yes")
                    }
                    else
                    {
                        @Html.DisplayName("No")
                    }
                </dd>

                <dt>
                    @Html.DisplayName("Device")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.device_name)
                </dd>

                <dt>
                    @Html.DisplayName("Playlist")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.playlist_name)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-color" /> |
                    <button class="btn btn-color">
                        @Html.ActionLink("Back to List", "Index")
                    </button>
                </div>
            }
        </div>
        <br />
    </div>
</div>