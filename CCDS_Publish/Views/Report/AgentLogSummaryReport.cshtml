
@{
    ViewBag.Title = "AgentLogSummaryReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h4 class="page-head-line">Agent Log Summary</h4>
        <div class="col-md-12">
            <div class="col-md-6">
                <table class="table table-striped table-bordered" style="font-weight: bold">
                    <tr>
                        <td>Department</td>
                        <td>
                            @Html.DropDownList("department_id", null, "All Departments", htmlAttributes: new { @class = "form-control" })
                        </td>
                    </tr>
                    <tr>
                        <td>Select User</td>
                        <td>
                            @* <input type="text" class="form-control" id="txtDevice" name="txtName" />*@
                            <select name="txtUser" class="form-control" required id="txtUser"></select>
                            @*<input type="hidden" name="SelectedName" id="SelectedName" />*@
                        </td>
                    </tr>
                    <tr>
                        <td>Device</td>
                        <td>
                            <select name="txtDevice" class="form-control" required id="txtDevice"></select>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table table-striped table-bordered" style="font-weight: bold">
                    <tr>
                        <td>From Date</td>
                        <td>
                            <input type="date" class="form-control" id="txtFromDate" />
                        </td>
                    </tr>
                    <tr>
                        <td>To Date</td>
                        <td>
                            <input type="date" class="form-control" id="txtToDate" />
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" style="padding-bottom: 15px;">
            <table class="pull-right">
                <tr>
                    <td>
                        <input type="button" value="Local Report" style="width:130px;" onclick="GenerateDepartmentListReport()" class="btn btn-lg btn-color" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div id="dialog-report" title="Information">
</div>

@section scripts{
    <script src="~/Scripts/modal/modal.js"></script>
    <script src="~/Scripts/sqms/report.js"></script>
}


