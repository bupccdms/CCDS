@using qms.Models
@model DepartmentLoginModel

@{
    ViewBag.Title = "Department Selection";
}

<style type="text/css">
    .bgimg {
        /*background-image: url('../Content/queue.jpg');*/
    }
</style>


<div class="container">


    <h4 class="page-head-line">Department Selection</h4>
    <div class="row bgimg">
        <div class=" col-md-5">
            <section id="loginForm">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    
                    <div class="form-group">
                        @*@Html.Label("Device", htmlAttributes: new { @class = "control-label col-md-2" })*@
                        <div class="col-md-10">
                            <select name="department_id" class="form-control" id="department_id" required>
                                <option value="">Select a department</option>
                                @foreach (var item in ViewBag.departmentList)
                                {

                                    <option value="@item.department_id">@item.department_name</option>

                                }
                            </select>

                        </div>

                    </div>

                    <div class="form-group">
                        <div class="col-md-5">
                            <input type="submit" value="GO" class="btn btn-color" style=" margin-top: 4px;" />
                        </div>
                    </div>




                }
            </section>
        </div>



    </div>

    

</div>
<br />